<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardMaxElevation="8dp"
    app:contentPadding="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/btn_menu_opts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_more_vert_black_24dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_questnr_dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/btn_menu_opts"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_menu_opts"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/iv_questnr_dp"
            android:textSize="14sp"
            tools:text="Pavan Kumar . 2 Days Ago" />

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name"
            android:layout_toEndOf="@+id/iv_questnr_dp"
            android:drawableStart="@drawable/ic_location_on_black_24dp"
            android:textSize="12sp"
            android:layout_marginLeft="5dp"
            tools:text="Hyderabad" />

        <TextView
            android:id="@+id/tv_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_questnr_dp"
            android:layout_marginEnd="12dp"
            android:layout_toEndOf="@+id/iv_questnr_dp"
            android:layout_marginStart="8dp"
            android:textColor="@color/textcolor"
            android:textSize="20sp"
            tools:text="Any one knows any good shops for metal frame bed in and around hyderabad?" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_answr_dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/tv_question"
            android:scaleType="centerCrop"
            android:layout_marginTop="7dp"
            android:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/tv_name_ans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_question"
            android:layout_marginStart="10dp"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@+id/iv_questnr_dp"
            android:gravity="center"
            android:textSize="14sp"
            android:text="Pavan Kumar . 2 Days Ago" />

        <TextView
            android:id="@+id/tv_ans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name_ans"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@+id/iv_answr_dp"
            android:textColor="@color/textcolor"
            android:textSize="14sp"
            android:text="you can check home town, they have good options of metal beds." />


        <TextView
            android:id="@+id/tv_no.of_ans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_ans"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="5dp"
            tools:text="3 Answers" />

        <View
            android:id="@+id/vw_seperator"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_below="@+id/tv_no.of_ans"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="12dp"
            android:background="#25000000" />

        <TextView
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vw_seperator"
            android:layout_marginStart="20dp"
            android:background="@android:color/transparent"
            android:drawableStart="@drawable/ic_star_black_24dp"
            android:gravity="center"
            android:drawablePadding="5dp"
            android:text="Save" />

        <TextView
            android:id="@+id/btn_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vw_seperator"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent"
            android:drawableStart="@drawable/ic_thumb_up_black_24dp"
            android:gravity="center"
            android:drawablePadding="5dp"
            android:text="Like" />

        <TextView
            android:id="@+id/btn_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vw_seperator"
            android:layout_alignEnd="@+id/vw_seperator"
            android:layout_marginEnd="20dp"
            android:background="@android:color/transparent"
            android:drawableStart="@drawable/ic_message_black_24dp"
            android:gravity="center"
            android:drawablePadding="5dp"
            android:text="Answer" />
    </RelativeLayout>
</android.support.v7.widget.CardView>