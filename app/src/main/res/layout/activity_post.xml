<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostActivity">


    <View
        android:id="@+id/colorview"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="#FF3F51B5"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="90dp"
        android:background="@drawable/itembackground"/>

    <ImageView
        android:id="@+id/post_clear"
        android:layout_below="@id/colorview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close_black_24dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="-3dp"
        />

    <TextView
        android:id="@+id/txt_what"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What do you want to post?"
        android:textColor="@color/colorPrimary"
        android:layout_below="@id/post_clear"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        />

    <LinearLayout
        android:id="@+id/ll_frst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_what"
        android:layout_marginTop="20dp"
        android:weightSum="2">


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@mipmap/ic_launcher"
            android:layout_weight="0.2"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Photo"
            android:textSize="19sp"
            android:textColor="@color/colorPrimary"
            android:layout_weight="1.8"
            android:layout_gravity="center"/>

    </LinearLayout>

    <View
        android:id="@+id/vw_seperator"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/ll_frst"
        android:background="#25000000" />

    <LinearLayout
        android:id="@+id/ll_scnd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_frst"
        android:layout_marginTop="20dp"
        android:weightSum="2">


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@mipmap/ic_launcher"
            android:layout_weight="0.2"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event"
            android:textSize="19sp"
            android:textColor="@color/colorPrimary"
            android:layout_weight="1.8"
            android:layout_gravity="center"/>

    </LinearLayout>

    <View
        android:id="@+id/vw_seperato11r"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/ll_scnd"
        android:background="#25000000" />

</RelativeLayout>